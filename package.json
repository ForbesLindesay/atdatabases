{
  "name": "atdatabases",
  "private": true,
  "@rollingversions/ignore": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "update-workflows": "github-actions-workflow-builder --cleanup --directory .github/workflows-src",
    "postinstall": "node scripts/postinstall",
    "prebuild": "wsrun --stages --exclude-missing build",
    "prebuild:all": "wsrun --stages --exclude-missing build",
    "build": "node scripts/build-all --only-changed",
    "build:all": "node scripts/build-all",
    "prerelease": "yarn build:all",
    "prettier:check": "prettier --list-different \"packages/*/src/**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
    "pretest": "yarn build",
    "test": "jest",
    "test:node": "jest --selectProjects node",
    "test:pg": "jest --selectProjects pg",
    "test:mysql": "jest --selectProjects mysql",
    "posttest": "wsrun --parallel --exclude-missing test",
    "watch:jest": "jest --watch",
    "clean": "rimraf packages/*/lib && rimraf packages/*/.last_build && rimraf packages/*/.cache && rimraf packages/*/build && rimraf packages/*/node_modules && rimraf node_modules",
    "tslint": "tslint './packages/*/src/**/*.{js,jsx,ts,tsx}' -t verbose -p ."
  },
  "jest": {
    "projects": [
      {
        "displayName": "node",
        "testRegex": "/__tests__/.+\\.test\\.(tsx?)$",
        "preset": "ts-jest"
      },
      {
        "displayName": "pg",
        "testRegex": "/__tests__/.+\\.test\\.pg\\.(tsx?)$",
        "globalSetup": "./packages/pg-test/jest/globalSetup.js",
        "globalTeardown": "./packages/pg-test/jest/globalTeardown.js",
        "preset": "ts-jest"
      },
      {
        "displayName": "mysql",
        "testRegex": "/__tests__/.+\\.test\\.mysql\\.(tsx?)$",
        "globalSetup": "./packages/mysql-test/jest/globalSetup.js",
        "globalTeardown": "./packages/mysql-test/jest/globalTeardown.js",
        "preset": "ts-jest"
      }
    ]
  },
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@types/jest": "^26.0.15",
    "cross-spawn": "^7.0.2",
    "github-actions-workflow-builder": "^1.0.3",
    "jest": "^26.6.1",
    "lsr": "^2.0.0",
    "mkdirp": "^1.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^26.4.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3",
    "wsrun": "^5.2.0"
  }
}
